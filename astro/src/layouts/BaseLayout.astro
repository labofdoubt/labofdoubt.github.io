---
import "../styles/global.css";

const { title } = Astro.props;
const BASE_URL = import.meta.env.BASE_URL; // "/" in dev; "/astro/" when built for Pages subpath
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} Â· SA` : "SA"}</title>
    <script>
      window.MathJax = {
        tex: {
          // Support both $...$/$$...$$ and \(..\)/\[..\]
          inlineMath: [["$", "$"], ["\\(", "\\)"]],
          displayMath: [["$$", "$$"], ["\\[", "\\]"]],
          // Enable automatic numbering + \label / \eqref (AMS-style)
          tags: "ams",
        },
      };
    </script>
    <script
      id="MathJax-script"
      async
      src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js"
    ></script>
  </head>
  <body>
    <header class="site">
      <nav class="site">
        <a class="brand" href={BASE_URL}>SA</a>
        <div class="nav-right">
          <a href={`${BASE_URL}blog/`}>Blog</a>
          <a href={`${BASE_URL}about/`}>About</a>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>


